<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_social_media_outreach" model="ir.ui.view">
        <field name="name">res.config.settings.social.media.outreach</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="AI Assistant Connector" string="AI Assistant Connector" data-key="social_media_outreach">
                    <h2>AI Assistant Connector</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="assistant_openai_api_key" password="True"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="assistant_openai_api_key"/>
                                <div class="text-muted">
                                    OpenAI API key used by the Social Media Outreach module.
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="assistant_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="assistant_id"/>
                                <div class="text-muted">
                                    Assistant ID (from OpenAI dashboard, e.g. asst_xxx).
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="assistant_model"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="assistant_model"/>
                                <div class="text-muted">
                                    Model name used by this assistant (for reference only).
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="assistant_api_base"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="assistant_api_base"/>
                                <div class="text-muted">
                                    Base URL of the OpenAI API. Leave default if using api.openai.com.
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Test Connection"/>
                                <div class="text-muted">
                                    Verify your API credentials and save settings.
                                </div>
                                <div class="content-group mt16">
                                    <button name="action_test_connection"
                                            string="Test Connection"
                                            type="object"
                                            icon="fa-plug"
                                            class="btn btn-secondary"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
