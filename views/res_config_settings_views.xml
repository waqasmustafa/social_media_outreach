<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_social_media_outreach" model="ir.ui.view">
        <field name="name">res.config.settings.social.media.outreach</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="AI Assistant Connector" string="AI Assistant Connector" data-key="social_media_outreach">
                    <h2>AI Assistant Connector</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label string="API Configuration"/>
                                <div class="text-muted">
                                    Configure OpenAI Assistant API credentials
                                </div>
                                <div class="content-group mt16">
                                    <div class="row">
                                        <label for="assistant_openai_api_key" class="col-3 col-lg-3 o_light_label" string="API Key"/>
                                        <field name="assistant_openai_api_key" password="True" placeholder="OpenAI API Key" class="col-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="assistant_id" class="col-3 col-lg-3 o_light_label" string="Assistant ID"/>
                                        <field name="assistant_id" placeholder="e.g. asst_xxx" class="col-9"/>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <button name="action_test_connection"
                                                    string="Test Connection"
                                                    type="object"
                                                    icon="fa-plug"
                                                    class="btn btn-secondary"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label string="Assistant Settings"/>
                                <div class="text-muted">
                                    Configure model and API endpoint
                                </div>
                                <div class="content-group mt16">
                                    <div class="row">
                                        <label for="assistant_model" class="col-3 col-lg-3 o_light_label" string="Model"/>
                                        <field name="assistant_model" placeholder="gpt-5.1" class="col-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="assistant_api_base" class="col-3 col-lg-3 o_light_label" string="API Base"/>
                                        <field name="assistant_api_base" placeholder="https://api.openai.com/v1" class="col-9"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

